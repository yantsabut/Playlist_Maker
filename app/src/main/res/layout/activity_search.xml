<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <TextView
        android:id="@+id/search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_s_normal"
        android:layout_marginTop="@dimen/margin_s_normal"
        android:drawablePadding="28dp"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/search"
        android:textColor="?attr/colorOnSecondary"
        android:textFontWeight="500"
        android:textSize="@dimen/text_normal"
        app:drawableStartCompat="@drawable/arrow_back"
        app:drawableTint="?attr/colorOnSecondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_l_normal"
        android:layout_marginEnd="16dp"
        android:background="@drawable/search_field"
        android:orientation="horizontal"
        style="@style/search_form">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:src="@drawable/search"
            app:iconPadding="11dp"
            style="@style/search_form"
            />

        <EditText
            android:id="@+id/search_form"
            style="@style/search_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="9dp"
            android:layout_weight="1"
            android:background="@drawable/search_field"
            android:gravity="center_vertical"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="32dp"
            android:textFontWeight="400" />

        <ImageView
            android:id="@+id/clear"
            style="@style/search_form"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center|end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/close"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние при фокусировке -->
    <item android:state_focused="true">
        <shape>
            <!-- Задаем цвет рамки при фокусировке -->
            <stroke android:color="@color/soft_blue" android:width="2dp"/>
        </shape>
    </item>

    <!-- Состояние по умолчанию -->
    <item>
        <shape>
            <!-- Задаем цвет рамки по умолчанию -->
            <stroke android:color="@color/saturated_grey" android:width="1dp"/>
        </shape>
    </item>
</selector>

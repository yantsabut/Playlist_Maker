<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Playlist_Maker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/soft_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:background">@color/moderately_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="thumbTint">@color/soft_blue</item>
        <item name="trackTint">@color/saturated_blue</item>
        <item name="android:textColorHint">@color/moderately_black</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="Theme.PlaylistMakerMainActivity" parent="Theme.Playlist_Maker">

        <!-- Customize your theme here. -->
        <item name="android:background">@color/moderately_black</item>
    </style>

</resources>
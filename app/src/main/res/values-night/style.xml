<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">?attr/colorSecondary</item>
        <item name="cornerRadius">@dimen/padding_large</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="SearchingActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textColor">@color/moderately_black</item>
    </style>

    <style name="SearchingActivityNotFoundMode">
        <item name="android:src">@drawable/not_found_dark_mode</item>
    </style>

    <style name="SearchingActivityBadConnectionMode">
        <item name="android:src">@drawable/bad_connection_dark_mode</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:track">@drawable/track</item>
        <item name="android:thumb">@drawable/knob</item>
    </style>

    <style name="DefaultImageViewStyle">
        <item name="tint">@color/moderately_black</item>
    </style>

    <style name="search_form">
        <item name="tint">@color/text_main</item>
        <item name="android:textColorHint">@color/text_main</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:drawableTint">@color/text_main</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:tint">?attr/colorOnSecondary</item>
        <item name="switchStyle">@color/switch_on</item>
    </style>
    <style name="AddFont">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_s_small</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <!--Styles for playlist_screen-->
    <style name="BackArrowPlayListScreenStyle">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TextViewMaxFontPlayListScreenStyle">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewMiddleFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewSmallRightFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_size_13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewDurationInTimeFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/small_medium_font_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SettingsActivitySwitchStyle">
        <item name="android:checked">true</item>
    </style>

    <style name="SettingsActivityTextViewStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginStart">@dimen/margin_start_for_textView</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="SettingsActivityFrameLayoutButtonStyle">
        <item name="android:minHeight">@dimen/layout_height_for_framelayout</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextViewToolbarStyle">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivityImageViewStyle">
        <item name="tint">@color/white</item>
    </style>

    <style name="MedialibraryTableoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="android:background">@color/moderately_black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MedialibraryToolbarStyle">
        <item name="android:background">@color/moderately_black</item>
    </style>

    <style name="BottomViewStyle">
        <item name="android:background">@color/pale_grey</item>

    </style>

    <style name="BottomMenuStyle">
        <item name="android:background">@color/moderately_black</item>
        <item name="itemIconTint">@drawable/bottom_menu_icon_color_night_mode</item>
        <item name="itemTextColor">@drawable/bottom_menu_icon_color_night_mode</item>
    </style>

    <style name="EditTextNewPlaylistStyle">
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="BackgroundPlayerStyle">
        <item name="android:background">@color/moderately_black</item>
    </style>

    <style name="PlaylistBottomSheetModTextViewStyle">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputLayoutStyleNewPlaylist" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="PlaylistBottomSheetCommonTextViewStyle">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ImageViewTrackItemStyle">
        <item name="android:background">@color/moderately_black</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">17dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">@dimen/padding_large</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="SearchingActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="SearchButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_l_normal</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

    <style name="SearchingActivityNotFoundMode">
        <item name="android:src">@drawable/nodatafound</item>
    </style>

    <style name="SearchingActivityBadConnectionMode">
        <item name="android:src">@drawable/connect_error</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>


    <style name="search_form">
        <item name="tint">@color/light_grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:backgroundTint">@color/grey_tint_search</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:drawableTint">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ToolbarStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="titleTextColor">?attr/colorOnPrimary</item>
    <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:tint">?attr/colorOnSecondary</item>
    </style>
    <style name="AddFont">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_s_small</item>
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="ImageViewToolbarStyle">
        <item name="android:layout_marginStart">@dimen/margin_s_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_s_normal</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="TextViewToolbarStyle">
        <item name="android:layout_marginStart">@dimen/layout_margin_start_textview_toolbar</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
    <item name="colorControlActivated">@color/enable_thumb</item>
    <item name="colorSwitchThumbNormal">@color/disable_thumb</item>
    <item name="android:colorForeground">@color/thumb_foreground</item>
    <item name="android:textColor">?attr/colorOnPrimary</item>
    <item name="android:textSize">@dimen/text_small</item>
    <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <!--Styles for playlist_screen-->
    <style name="BackArrowPlayListScreenStyle">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="tint">@color/moderately_black</item>
    </style>

    <style name="TextViewMaxFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/moderately_black</item>
    </style>

    <style name="TextViewMiddleFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/moderately_black</item>
    </style>

    <style name="TextViewSmallFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_size_13sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextViewSmallRightFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_size_13sp</item>
        <item name="android:textColor">@color/moderately_black</item>
    </style>

    <style name="TextViewDurationInTimeFontPlayListScreenStyle">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/small_medium_font_size</item>
        <item name="android:textColor">@color/moderately_black</item>
    </style>

    <style name="TrackListViewStyle">
        <item name="android:textColor">@color/saturated_grey</item>
        <item name="tint">@color/saturated_grey</item>
    </style>

    <style name="ActivityImageViewStyle">
        <item name="tint">@color/saturated_grey</item>
    </style>

    <style name="ImageViewTrackItemStyle">
        <item name="android:background">@color/white</item>
    </style>

    <!--Styles for medialibrary_screen-->

    <style name="MedialibraryTableoutStyle">
        <item name="tabTextColor">@color/moderately_black</item>
        <item name="tabIndicatorColor">@color/moderately_black</item>
        <item name="android:background">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MedialibraryToolbarStyle">
        <item name="android:background">@color/white</item>
    </style>



    <style name="EditTextNewPlaylistStyle">
        <item name="android:textColorHint">@color/moderately_black</item>
    </style>

    <style name="BottomMenuStyle">
        <item name="itemIconTint">@drawable/bottom_menu_icon_color_day_mode</item>
        <item name="itemTextColor">@drawable/bottom_menu_icon_color_day_mode</item>
    </style>

    <style name="BackgroundPlayerStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="PlaylistBottomSheetModTextViewStyle">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NewPlaylistButtonStyle">
    <item name="backgroundTint">@drawable/create_playlist_button_selector</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:fontFamily">@font/ys_display_medium</item>
    <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutStyleNewPlaylist" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/moderately_black</item>
        <item name="android:textColor">@color/moderately_black</item>
    </style>

    <style name="PlaylistBottomSheetCommonTextViewStyle">
        <item name="android:textColorHint">@color/saturated_grey</item>
        <item name="android:textColor">@color/saturated_grey</item>
    </style>

</resources>